%html
  %head
    %title MyMood: SignUp
    = stylesheet_link_tag 'bootstrap.min'
    = stylesheet_link_tag 'bootstrap-responsive.min'
    = stylesheet_link_tag 'index'
    = stylesheet_link_tag 'jquery-ui'

  %body
    %div.navbar.navbar-inverse.navbar-fixed-top
      %div.navbar-inner
        %div.container-fluid
          %div.brand MyMood
          %ul.nav.pull-left
            %li.divider-vertical
            %li <a href="/">Home</a>
            %li.divider-vertical
            %li <a href="#">About Us</a>
            %li.divider-vertical
            %li <a href="#">Tell A Friend</a>
            %li.divider-vertical
            %li <a href="/signup">Sign Up</a>
            %li.divider-vertical

  %div#content
    %div
      %h1 SIGN UP PAGE
      = form_tag signup_path do
        = label :user, :name, 'Name'
        = text_field :user, :name, :required => true
        = label :user, :phone_number, 'Phone Number'
        = text_field :user, :phone_number, :required => true
        = label :user, :email, 'Email'
        = text_field :user, :email, :required => true
        = label :user, :password, 'Password'
        = password_field :user, :password, :required => true
        = label :user, :confirm_password, 'Confirm Password'
        = password_field :user, :confirm_password, :required => true
        %br
        = submit_tag "Sign Up"
