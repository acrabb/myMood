%html
  %head
    %title MyMood: SignUp
    = stylesheet_link_tag 'bootstrap.min'
    = stylesheet_link_tag 'bootstrap-responsive.min'
    = stylesheet_link_tag 'index'
    = stylesheet_link_tag 'jquery-ui'

  %body
    %div.navbar.navbar-inverse.navbar-fixed-top
      %div.navbar-inner
        %div.container-fluid
          %div.brand MyMood
          %ul.nav.pull-left
            %li.divider-vertical
            %li <a href="/">Home</a>
            %li.divider-vertical
            %li <a href="#">About Us</a>
            %li.divider-vertical
            %li <a href="#">Tell A Friend</a>
            %li.divider-vertical
            %li <a href="/signup">Sign Up</a>
            %li.divider-vertical

  %div#content
    %div
      %h1 SIGN UP PAGE
      Name
      %input{:id => "name_field", :type=>"text", :required => true}
      %br
      Phone Number
      %input{:id => "phone_number_field", :type=>"text", :required => true}
      %br
      Email
      %input{:id => "email_field", :type=>"text", :required => true}
      %br
      Password
      %input{:id => "password_field", :type=>"password", :required => true}
      %br
      Confirm Password
      %input{:id => "confirm_password_field", :type=>"password", :required => true}
      %br
      = submit_tag "Sign Up"
